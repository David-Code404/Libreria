<div class="container p-4">
  <div class="row">
    {{#each categorias}}
      <div class="col-md-3 p-2">
        <div class="card text-center bg-dark text-light h-100">
          <div class="card-body">
            <img src="{{url_imagen}}" alt="{{nombre}}" class="card-img-top" />
            <h3 class="card-title text-uppercase">{{nombre}}</h3>
            <p class="card-text">{{descripcion}}</p>
            <div>
              <a href="/categorias/edit/{{id}}" class="btn btn-warning">Editar</a>
              <a href="/categorias/delete/{{id}}" class="btn btn-danger">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

