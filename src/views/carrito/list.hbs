<div class="container p-4">
  <h1 class="text-center text-uppercase text-light mb-4">Lista de Productos en el Carrito</h1>
  <div id="cartCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each carrito}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <div class="product-card card text-center bg-dark text-light mx-auto" style="max-width: 300px;">
          <div class="card-body">
            <div class="image-container">
              <img src="{{this.producto.url_imagen}}" alt="{{this.producto.nombre}}" class="product-image card-img-top" />
            </div>
            <h3 class="card-title text-uppercase">{{this.producto.nombre}}</h3>
            <p class="card-text">{{this.producto.descripcion}}</p>
            <p class="card-text"><strong>Cantidad:</strong> {{this.cantidad}}</p>
            <p class="card-text"><strong>Precio:</strong> ${{this.producto.precio}}</p>
            <div class="btn-container">
              <a href="/carrito/edit/{{this.id}}" class="btn btn-warning">Editar</a>
              <a href="/carrito/delete/{{this.id}}" class="btn btn-danger">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <!-- Controles del carrusel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#cartCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#cartCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
