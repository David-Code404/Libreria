<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <form id="addToCartForm" class="card-body">
          <!-- Título y botón de guardar -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light mb-3 h4">Crear un Nuevo Producto</h1>
            <button class="btn btn-success" type="submit" id="saveButton">Guardar</button>
          </div>

          <!-- Campos del producto -->
          <label for="nombre" class="text-light">Nombre del Producto:</label>
          <input
            type="text"
            name="nombre"
            class="form-control bg-dark text-light mb-3"
            placeholder="Nombre"
            required
          />
          <label for="descripcion" class="text-light">Descripción:</label>
          <textarea
            name="descripcion"
            class="form-control bg-dark text-light mb-3"
            placeholder="Descripción"
            required
          ></textarea>
          <label for="precio" class="text-light">Precio:</label>
          <input
            type="number"
            name="precio"
            class="form-control bg-dark text-light mb-3"
            placeholder="Precio"
            step="0.01"
            required
          />
          <label for="cantidad" class="text-light">Cantidad:</label>
          <input
            type="number"
            name="cantidad"
            class="form-control bg-dark text-light mb-3"
            placeholder="Cantidad"
            required
          />
          <label for="url_imagen" class="text-light">URL de la Imagen:</label>
          <input
            type="url"
            name="url_imagen"
            class="form-control bg-dark text-light mb-3"
            placeholder="URL de la imagen"
            required
          />
          <label for="categoria_id" class="text-light">Categoría:</label>
          <select
            name="categoria_id"
            class="form-control bg-dark text-light mb-3"
            required
          >
            <option value="" disabled selected>Seleccione una categoría</option>
            {{#each categorias}}
              <option value="{{this.id}}">{{this.nombre}}</option>
            {{/each}}
          </select>

          <!-- Botón de añadir al carrito -->
          <button
            type="button"
            class="btn btn-primary btn-block mt-3"
            id="addToCartButton"
          >
            Añadir al Carrito
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal de Confirmación -->
<div
  class="modal fade"
  id="confirmationModal"
  tabindex="-1"
  aria-labelledby="confirmationModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationModalLabel">Carrito</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        El producto se añadió correctamente al carrito.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
