<div class="container p-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card bg-dark text-white shadow-lg">
        <div class="card-body text-center">
          <h1 class="fw-bold mb-3">Bienvenido, {{user.fullname}}</h1>
          <h4 class="mb-2">{{user.email}}</h4>
          <p class="mb-4 text-muted">{{timeago user.created_at}}</p>

          <!-- Botones visibles para todos los usuarios -->
          <div class="d-grid gap-2 mb-3">
            <a href="/productos" class="btn btn-primary btn-lg">Productos</a>
            
          </div>

          <!-- Enlaces visibles solo para administradores -->
          {{#if (eq user.role "admin")}}
          <div class="d-grid gap-2">
            <a href="/categorias" class="btn btn-secondary btn-lg">Categor√≠as</a>
            <a href="/usuarios" class="btn btn-warning btn-lg">Usuarios</a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
