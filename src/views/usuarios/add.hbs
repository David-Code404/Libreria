<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <form id="addUserForm" class="card-body">
          <!-- Título y botón de guardar -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light mb-3 h4">Crear un Nuevo Usuario</h1>
            <button
              class="btn btn-success"
              type="submit"
              id="saveButton"
            >Guardar</button>
          </div>

          <!-- Campos del usuario -->
          <label for="fullname" class="text-light">Nombre Completo:</label>
          <input
            type="text"
            name="fullname"
            class="form-control bg-dark text-light mb-3"
            placeholder="Nombre completo"
            required
          />
          <label for="email" class="text-light">Correo Electrónico:</label>
          <input
            type="email"
            name="email"
            class="form-control bg-dark text-light mb-3"
            placeholder="Correo electrónico"
            required
          />
          <label for="password" class="text-light">Contraseña:</label>
          <input
            type="password"
            name="password"
            class="form-control bg-dark text-light mb-3"
            placeholder="Contraseña"
            required
          />
          <label for="confirmPassword" class="text-light">Repetir Contraseña:</label>
          <input
            type="password"
            name="confirmPassword"
            class="form-control bg-dark text-light mb-3"
            placeholder="Repetir Contraseña"
            required
          />
          

          <!-- Botón de guardar -->
          <button
            type="submit"
            class="btn btn-primary btn-block mt-3"
            id="saveButton"
          >
            Guardar Usuario
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Script de validación para contraseñas -->
<script>
  document.getElementById("addUserForm").addEventListener("submit", function(event) {
    const password = document.querySelector('[name="password"]').value;
    const confirmPassword = document.querySelector('[name="confirmPassword"]').value;
    
    if (password !== confirmPassword) {
      event.preventDefault(); // Prevenir el envío del formulario
      alert("Las contraseñas no coinciden. Por favor, verifica nuevamente.");
    }
  });
</script>

